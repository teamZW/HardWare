<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="onBack"
        android:padding="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/back"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_above="@+id/crpv_tick"
        android:layout_marginBottom="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/valuetv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center"
            android:text="06"
            android:textColor="#615532"
            android:textSize="60sp"/>
        <TextView
            android:id="@+id/valuetv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center"
            android:text="06"
            android:textColor="#615532"
            android:textSize="60sp"/>
        <TextView
            android:id="@+id/valuetv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center"
            android:text="06"
            android:textColor="#615532"
            android:textSize="60sp"/>
    </LinearLayout>
    <com.tc.lock.CircleLock
        android:id="@+id/crpv_tick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:roundBackgroundColor="@color/transparent"
        app:circleRadius="500"
        app:tickStrokeSizeBig="50dp"
        app:tickStrokeSizeSmall="25dp"
        app:defaultTriangleColor="#ffffff"
        app:defaultTickColorSmall="#d8d8d8"
        app:lineWidthSmall="1.0"
        app:lineWidthBig="2.0"
        app:tickMaxCount="20"
        app:centerTextSize="20sp" />
</RelativeLayout>